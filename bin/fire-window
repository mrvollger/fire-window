#!/usr/bin/env bash
# Wrapper script to run fire-window from anywhere using pixi

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PIXI=${SCRIPT_DIR}/../pixi.toml
# Go up one level to project root and run with pixi
pixi run --manifest-path ${PIXI} fire-window "$@"
